# i3 config file (v4)
set $mod Mod4

# Workspace
set $ws1  "1:  "
set $ws2  "2:  "
set $ws3  "3:  "
set $ws4  "4:  "
set $ws5  "5:  "
set $ws6  "6:  "
set $ws7  "7:  "
set $ws8  "8:  "
set $ws9  "9:  "
set $ws10 "10:  "

# Color
set_from_resource $black       color0  #000000
set_from_resource $darkred     color1  #000000
set_from_resource $darkgreen   color2  #000000
set_from_resource $darkyellow  color3  #000000
set_from_resource $darkblue    color4  #000000
set_from_resource $darkmagenta color5  #000000
set_from_resource $darkcyan    color6  #000000
set_from_resource $darkwhite   color7  #000000
set_from_resource $darkgrey    color8  #000000
set_from_resource $red         color9  #000000
set_from_resource $green       color10 #000000
set_from_resource $yellow      color11 #000000
set_from_resource $blue        color12 #000000
set_from_resource $magenta     color13 #000000
set_from_resource $cyan        color14 #000000
set_from_resource $white       color15 #000000

# Use custom colors for black
set $black       #282828
set $darkblack   #1d2021
set $transparent #282828

# Include additional configuration files
set $i3dir ~/.config/i3
set $i3config ~/.config/i3/config.d


include $i3config/system_settings.conf  # Contains all system wide configurations
include $i3config/theme.conf            # Appearance settings and theme customization
include $i3config/keybindings.conf      # Keybindings and shortcuts
include $i3config/workspaces.conf       # Workspace definitions and settings
include $i3config/statusbar.conf        # Status bar configuration
include $i3config/monitors.conf         # Monitor and display settings
include $i3config/applications.conf     # Application-specific settings
include $i3config/floating_windows.conf # Floating window rules
include $i3config/autostart.conf        # Startup applications and commands

include $i3config/resize.conf           # Window resizing and positioning
include $i3config/power_management.conf # Power management settings
# include $i3config/gaps.conf             # Gaps and spacing settings
